<%= form_with(model: @post, local: true,url: choose_new_or_edit,class:"blog_wrapper") do |form| %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2><%= @post.errors.count %>件のエラーがあります。</h2>
        <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="tweet_main">
      <div>
        <%= form.label :content %>
        <%= form.text_field :content %>
    </div>
    <%= form.submit class:"btn-default" %>
    </div>
  <% end %>


  